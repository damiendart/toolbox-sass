{% block preamble %}{% endblock %}
<!DOCTYPE html>
<html lang="{{ language | default('en') }}" prefix="og: http://ogp.me/ns#">
<head>
    <meta charset="utf-8">
    {% block headCustom %}{% endblock %}
    {% if metaAuthor %}
        <meta content="{{ metaAuthor }}" name="author">
    {% endif %}
    {% if metaTwitterAuthor | default(false) %}
        <meta content="{{ metaTwitterAuthor }}" property="twitter:creator">
    {% endif %}
    {% if metaTwitterSite | default(false) %}
        <meta content="{{ metaTwitterSite }}" property="twitter:site">
    {% endif %}
    {% if metaCanonical %}
        <link href="{{ metaCanonical }}" rel="canonical">
    {% endif %}
    {% if metaDescription %}
        <meta content="{{ metaDescription }}" name="description">
        <meta content="{{ metaDescription }}" property="og:description">
    {% endif %}
    {% if metaOpengraphImage %}
        <meta content="{{ metaOpengraphImage }}" property="og:image">
        <meta content="{{ metaOpengraphImageSize | default('summary_large_image')}}" name="twitter:card">
    {% endif %}
    <meta content="{{ metaOpengraphType | default('website') }}" property="og:type">
    {% if metaOpengraphUrl %}
        <meta content="{{ metaOpengraphUrl }}" property="og:url">
    {% endif %}
    <meta content="initial-scale=1, maximum-scale=1, width=device-width" name="viewport">
    {% if metaNoCrawl | default(false) %}
        <meta content="noindex, nofollow" name="robots">
    {% endif %}
    <script>{% block headJavaScript "document.documentElement.className+='javascript'" %}</script>
    <title>{{ metaTitle }}</title>
    {% if metaOpengraphTitle | default(false) %}
        <meta content="{{ metaOpengraphTitle }}" property="og:title">
    {% endif %}
</head>
<body{% if bodyClasses | default(false) %} class="{{ bodyClasses }}"{% endif %}>
    {% block body %}{% endblock %}
</body>
</html>
