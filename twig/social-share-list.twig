<ul class="social-share-list">
  <li class="social-share-list__item social-share-list__item--twitter">
    <a
      href="https://twitter.com/intent/tweet?source=webclient{% if twitterText %}&text={{ twitterText | escape('url') }}{% endif %}&url={{ link | escape('url') }}"
      target="_blank"
      title="Share on Twitter"
    >
      <span>Share on Twitter</span>
    </a>
  </li>
  <li class="social-share-list__item social-share-list__item--facebook">
    <a href="http://www.facebook.com/sharer.php?u={{ link | escape('url') }}" target="_blank" title="Share on Facebook">
      <span>Share on Facebook</span>
    </a>
  </li>
  <li class="social-share-list__item social-share-list__item--permalink">
    <a href="{{ link }}" title="Permalink"><span>Permalink</span></a>
  </li>
</ul>
